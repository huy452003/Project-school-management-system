{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.backend",
    "buildCommand": null,
    "rootDirectory": ".",
    "watchPatterns": [
      "Dockerfile",
      "**/*.java",
      "**/pom.xml"
    ]
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

