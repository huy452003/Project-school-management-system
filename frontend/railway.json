{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.frontend",
    "rootDirectory": "frontend",
    "watchPatterns": [
      "Dockerfile",
      "**/*.jsx",
      "**/*.js",
      "**/*.css",
      "package.json",
      "vite.config.js"
    ]
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

